<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_pos_shop_owner" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.pos.shop.owner</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <div id="category_reference" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="shop_owner">
                    <div class="o_setting_left_pane">
                        <field name="iface_shop_owner"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_shop_owner"/>
                        <div class="text-muted">
                            Set Shop Owner
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('iface_shop_owner', '=', False)]}" modifiers="{'invisible':[['iface_shop_owner','=',false]]}">
                            <div class="row mt16">
                                <label string="Select Shop Owner" for="shop_owner" class="col-lg-3 o_light_label"/>
                                <field name="shop_owner" id="shop_owner" attrs="{'required': [('iface_shop_owner', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <record id="view_pos_config_tree_shop_owner_inherit" model="ir.ui.view">
        <field name="name">pos.config.tree.view.shop.owner.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="shop_owner" />
            </xpath>
        </field>
    </record>


    <record id="point_of_sale_shop_filter_user" model="ir.rule">
        <field name="name">Shop Owner Filter</field>
        <field ref="model_pos_config" name="model_id"/>
        <field name="domain_force">[('shop_owner','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
    </record>
    <record id="point_of_sale_shop_filter_admin" model="ir.rule">
        <field name="name">Shop Owner Filter</field>
        <field ref="model_pos_config" name="model_id"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
    </record>
</odoo>
